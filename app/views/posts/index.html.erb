
<div class ='user'>
  <img class="user_img" src=<%= @user.photo %> alt=<%= @user.name %> />
  <%= render "share/user",   user: @user  %>
</div>

<% @posts.each_with_index do |post, index| %>
  <div class='post_details'>
    <%= render "share/posts",   post: post %>

   <% post.comments.each do |comment| %>
      <%=render "share/comments", comment: comment%>
   <% end %>
 </div>
<% end %>
