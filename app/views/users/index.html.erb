
  <% @users.each do |user| %>
    <div class ='user'>
       <a id="user-link-<%=user.id%>" href="<%= user_path(user) %>">
            <img class="user_img" src=<%= user.photo %> alt=<%= user.name %> />
          
           <div class='user-info'> 
             <div class= 'user-name'>

               <h2 ><a class="home-name" href="<%= user_path(user) %>"><%= user.name %></a></h2> 
             </div>
             
             <p class= 'user-extra' >Number of posts:  <%= user.posts.size %></p>   
           </div>
       </a>
    </div>
  <% end %>


 
